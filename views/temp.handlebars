<main>
	{{!-- Modal div for profile creation goes here --------------------------------------------- --}}
	<div class="modal fade" id="signupModal" tainted="-1" role="dialog" aria-labelledby="signupModal" aria-hidden="true">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header" id="signupModalTop">
					<h5 class="modal-title" id="signupModalLabel">Profile Creation</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body" id="signupModalMiddle">
					<form class="signup">
						<div class="container-fluid">
							<div class="row">
								<div class="col col-s12 col-lg-6 d-flex align-items-stretch">
									<div class="row">
										<div class="col col-s12 col-lg-12">
											<input type="text" class="form-control modal-text" id="firstname-input" placeholder="First Name...">
										</div>

										<div class="col col-s12 col-lg-12">
											<input type="text" class="form-control modal-text" id="username-input" placeholder="Username...">
										</div>

										<div class="col col-s12 col-lg-12">
											<input type="text" class="form-control modal-text" id="password-input" placeholder="Password...">
										</div>
									</div>
								</div>

								<div class="col col-s12 col-lg-6 d-flex align-items-stretch">
									<div class="row">
										<div class="col col-s12 col-lg-12">
											<input type="text" class="form-control modal-text" id="lastname-input" placeholder="Last Name...">
										</div>

										<div class="col col-s12 col-lg-12">
											<input type="text" class="form-control modal-text" id="email-input" placeholder="Email...">
										</div>

										<div class="col col-s12 col-lg-12">
											<input type="text" class="form-control modal-text" placeholder="Confirm Password...">
										</div>
									</div>
								</div>


								<div class="row d-flex align-items-center">
									<div class="col col-s-4 col-lg-4">
										<input type="text" class="form-control modal-text" id="xbox-input" placeholder="Xbox Tag...">
									</div>

									<div class="col col-s-4 col-lg-4">
										<input type="text" class="form-control modal-text" id="playstation-input" placeholder="PSN ID...">
									</div>

									<div class="col col-s-4 col-lg-4">
										<input type="text" class="form-control modal-text" id="steam-input" placeholder="Steam ID...">
									</div>

								</div>
							</div>
						</div>

						<div class="modal-footer" id="signupModalBottom">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							<button id="profile-submit" type="submit" class="btn btn-primary">Submit</button>
							<a class="btn btn-primary" href="/auth/facebook">Facebook</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>


	<div id="fullpage">


		<div class="section" id="section1">


			<div class="container">
				<div class="row">
					<div class="col s12 m12 l8 offset-l2 card-color card-color-light card-margin">
						<h1 class="white-text ">
							<strong>About us</strong>
						</h1>
						<div class="card card-color-greenLight">
							<div class="card-image imageResponsive ">
								<img src="assets/images/mario and luigi.PNG">
								<span class="card-title">The Website for Your Social Gaming Needs!</span>
							</div>
							<div class="card-content">
								<h6>
									<strong>Why choose us?</strong>
								</h6>
								<h6>As proud gamers we do our very best to provide our community with all the features we find lacking on your average
