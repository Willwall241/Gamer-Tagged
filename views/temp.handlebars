				<div class="row main-content">
					<div class="col s6 offset-s3">
						<div class="row">
							<div class="col s12">
								<div class="card">

									<div class="card-content " id="top-card">
										<span class="card-title"><h3>LogIn</h3></span>
										<form class="login">
											<div class="row">
												<div class="input-field col s12">
													<label for="email-login">Email address</label>
													<input type="email" class="form-control" id="email-login">
												</div>
											</div>
											<div class="row">
												<div class="input-field col s12">
													<label for="password-login">Password</label>
													<input type="password" class="form-control" id="password-login">
												</div>
											</div>
											<div class="card-action bg-transparent loginBtn-style">
												<button type="submit" class="btn btn-wave">Login</button>
												<button class="btn" type="submit" data-toggle="modal" data-target="#signupModal" name="action" id="top-profile-modal">Create
													Profile
													<i class="material-icons right">send</i>
												</button>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
